<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.campos0022715.labosindustrial.CrearAnuncio"
    tools:showIn="@layout/app_bar_crear_anuncio"
    android:orientation="vertical"
    android:background="#efefef">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Completa el siguiente formulario para crear un anuncio:"
        android:textSize="18sp"
        android:padding="20dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NewAnMateria"
            android:singleLine="true"
            android:layout_gravity="start"
            android:hint="Nombre de la Materia"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NewAnLaboratorio"
            android:singleLine="true"
            android:layout_gravity="start"
            android:hint="Nombre del Laboratorio"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="150"
        android:padding="10dp"
        android:layout_gravity="start">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NewAnTitulo"
            android:layout_gravity="center"
            android:singleLine="true"
            android:hint="Titulo del Anuncio"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="300"
        android:padding="10dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NewAnAnuncio"
            android:layout_gravity="center"
            android:hint="Cuerpo del Anuncio"/>
    </android.support.design.widget.TextInputLayout>
</LinearLayout>